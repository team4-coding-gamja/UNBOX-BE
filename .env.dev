# =============================================================================
# 개발 환경 설정 (Development Environment)
# 비용 최소화, 디버깅 편의성 우선
# =============================================================================

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# 데이터베이스 설정 (AWS RDS PostgreSQL - 개발용)
# =============================================================================
# 주의: 실제 값은 AWS Secrets Manager 또는 GitHub Secrets에서 주입
DB_HOST=unbox-dev-rds.cluster-xxx.ap-northeast-2.rds.amazonaws.com
DB_PORT=5432
DB_NAME=unboxdb_dev
DB_USERNAME=unbox_dev_user
# DB_PASSWORD는 런타임에 AWS Secrets Manager에서 가져옴
DB_PASSWORD_SECRET_NAME=/unbox/dev/db-password

# Connection Pool 설정 (개발용 - 작은 풀)
DB_HIKARI_MAXIMUM_POOL_SIZE=5
DB_HIKARI_MINIMUM_IDLE=2
DB_HIKARI_CONNECTION_TIMEOUT=20000

# =============================================================================
# Redis 설정 (AWS ElastiCache - 개발용)
# =============================================================================
REDIS_HOST=unbox-dev-redis.xxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_TIMEOUT=5000
REDIS_LETTUCE_POOL_MAX_ACTIVE=4
REDIS_LETTUCE_POOL_MAX_IDLE=4
REDIS_LETTUCE_POOL_MIN_IDLE=1

# =============================================================================
# JWT 보안 설정 (개발용 - 긴 만료시간)
# =============================================================================
# JWT_SECRET는 런타임에 AWS Secrets Manager에서 가져옴
JWT_SECRET_SECRET_NAME=/unbox/dev/jwt-secret
JWT_ACCESS_TOKEN_EXPIRATION=86400000   # 24시간 (개발 편의성)
JWT_REFRESH_TOKEN_EXPIRATION=604800000 # 7일

# =============================================================================
# 서버 설정
# =============================================================================
SERVER_PORT=8080
SERVER_SERVLET_CONTEXT_PATH=/api

# =============================================================================
# 로깅 설정 (개발용 - 상세 로그)
# =============================================================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_EXAMPLE_UNBOX_BE=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_TYPE_DESCRIPTOR_SQL=TRACE

# =============================================================================
# 외부 API 설정 (개발용 - 저렴한 모델)
# =============================================================================
# OPENAI_API_KEY는 런타임에 AWS Secrets Manager에서 가져옴
OPENAI_API_KEY_SECRET_NAME=/unbox/dev/openai-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# CORS 설정 (개발용 - 관대한 설정)
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://dev.unbox.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# 모니터링 및 액추에이터 (개발용 - 모든 엔드포인트 활성화)
# =============================================================================
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=*
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_METRICS_EXPORT_PROMETHEUS_ENABLED=true

# =============================================================================
# 파일 업로드 설정
# =============================================================================
SPRING_SERVLET_MULTIPART_MAX_FILE_SIZE=10MB
SPRING_SERVLET_MULTIPART_MAX_REQUEST_SIZE=10MB

# =============================================================================
# AWS 설정 (개발용)
# =============================================================================
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=unbox-dev-storage
AWS_CLOUDFRONT_DOMAIN=dev-cdn.unbox.com

# =============================================================================
# 개발 편의 설정
# =============================================================================
# H2 Console (개발 시 DB 확인용)
SPRING_H2_CONSOLE_ENABLED=false
# JPA 설정
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_HIBERNATE_DDL_AUTO=validate