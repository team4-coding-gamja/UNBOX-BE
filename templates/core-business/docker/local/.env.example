# Core Business Service (API Gateway) - Local Development Environment
# Copy this file to .env and update values as needed

# Application Configuration
CORE_BUSINESS_PORT=8080
SPRING_PROFILES_ACTIVE=local

# Database Configuration
POSTGRES_DB=unbox_core_local
POSTGRES_USER=unbox_user
POSTGRES_PASSWORD=ChangeHERE!
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# JWT Configuration
SPRING_JWT_SECRET=ChangeHERE!

# MSA Service URLs (다른 서비스들과 통신)
USER_SERVICE_URL=http://localhost:8081
PRODUCT_SERVICE_URL=http://localhost:8082
TRADE_SERVICE_URL=http://localhost:8083
ORDER_SERVICE_URL=http://localhost:8084
PAYMENT_SERVICE_URL=http://localhost:8085

# Logging Configuration
LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARN

# Database Driver
DB_DRIVER_CLASS_NAME=org.postgresql.Driver