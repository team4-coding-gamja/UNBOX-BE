# Order Service - Local Development Environment
# Copy this file to .env and update values as needed

# Application Configuration
ORDER_SERVICE_PORT=8084
SPRING_PROFILES_ACTIVE=local

# Database Configuration
POSTGRES_DB=unbox_order_local
POSTGRES_USER=unbox_user
POSTGRES_PASSWORD=ChangeHERE!
POSTGRES_PORT=5436

# Redis Configuration
REDIS_PORT=6383

# JWT Configuration
JWT_SECRET=ChangeHERE!

# External Service URLs (주문 처리에 필요한 서비스들)
USER_SERVICE_URL=http://localhost:8081
PRODUCT_SERVICE_URL=http://localhost:8082
PAYMENT_SERVICE_URL=http://localhost:8085

# Logging Configuration
LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARN

# Database Driver
DB_DRIVER_CLASS_NAME=org.postgresql.Driver