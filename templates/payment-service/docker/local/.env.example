# Payment Service - Local Development Environment
# Copy this file to .env and update values as needed

# Application Configuration
PAYMENT_SERVICE_PORT=8085
SPRING_PROFILES_ACTIVE=local

# Database Configuration
POSTGRES_DB=unbox_payment_local
POSTGRES_USER=unbox_user
POSTGRES_PASSWORD=ChangeHERE!
POSTGRES_PORT=5437

# Redis Configuration
REDIS_PORT=6384

# JWT Configuration
SPRING_JWT_SECRET=ChangeHERE!

# Payment Gateway Configuration (결제 게이트웨이 설정)
PAYMENT_GATEWAY_URL=https://api.sandbox-payment-gateway.com
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_api_key_here

# Logging Configuration
LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARN

# Database Driver
DB_DRIVER_CLASS_NAME=org.postgresql.Driver