# Trade Service - Local Development Environment
# Copy this file to .env and update values as needed

# Application Configuration
TRADE_SERVICE_PORT=8083
SPRING_PROFILES_ACTIVE=local

# Database Configuration
POSTGRES_DB=unbox_trade_local
POSTGRES_USER=unbox_user
POSTGRES_PASSWORD=ChangeHERE!
POSTGRES_PORT=5435

# Redis Configuration
REDIS_PORT=6382

# JWT Configuration
JWT_SECRET=ChangeHERE!

# External Service URLs (거래 처리에 필요한 서비스들)
USER_SERVICE_URL=http://localhost:8081
PRODUCT_SERVICE_URL=http://localhost:8082
ORDER_SERVICE_URL=http://localhost:8084
PAYMENT_SERVICE_URL=http://localhost:8085

# Logging Configuration
LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARN

# Database Driver
DB_DRIVER_CLASS_NAME=org.postgresql.Driver