# ============================================
# AWS 설정
# ============================================
aws_region = "ap-northeast-2"

# ============================================
# User Service
# ============================================
user_service_image_tag      = "latest"
user_service_cpu            = 256
user_service_memory         = 512
user_service_desired_count  = 2

# Secrets Manager ARN (인프라팀이 제공)
user_db_password_secret_arn = "arn:aws:secretsmanager:ap-northeast-2:ACCOUNT_ID:secret:staging/user-db-password-XXXXX"
jwt_secret_arn              = "arn:aws:secretsmanager:ap-northeast-2:ACCOUNT_ID:secret:staging/jwt-secret-XXXXX"

# 로컬 테스트용 (실제로는 Secrets Manager 사용)
user_db_password = "CHANGE_ME_USER_DB_PASSWORD"

